@model UpdateProjectDto
@{
    ViewData["Title"] = "UpdateProject";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Proje Güncelleme Sayfası</h5>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label>Proje Adı</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="Proje Adını Giriniz" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label>Görsel Url</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel Url Giriniz" />
                        <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label>Proje Kategorisi</label>
                        <select type="text" asp-for="CategoryId" class="form-control" asp-items="ViewBag.categories">
                            <option selected>Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>

                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>




