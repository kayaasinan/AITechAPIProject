
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}


<div class="card admin-card mb-3">

    <div class="admin-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">AI Çözüm Sayfası</h4>
    </div>
    <form method="post">
        <div class="position-relative mb-3">
            <i class="bi bi-chat-dots position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
            <input type="text" name="prompt" class="form-control form-control-lg ps-5 rounded-pill shadow-sm" placeholder="Lütfen AI içeriği için bir prompt girin..." required />
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-send me-2"></i> Gönder
            </button>
        </div>
    </form>
    @if (ViewBag.response != null)
    {
        <div class="alert alert-info mb-3">
            <strong>Gelen Yanıt:</strong>
            <br />
            <p>
                @ViewBag.response
            </p>
        </div>
    }

</div>


