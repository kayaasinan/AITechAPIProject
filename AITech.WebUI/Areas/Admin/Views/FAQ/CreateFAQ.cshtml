@model CreateFAQDto
@{
    ViewData["Title"] = "CreateFAQ";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yeni Soru/Cevap Oluştur</h5>
                </div>

                <form method="post">
                    <div class="form-group mb-3">
                        <label>Soru</label>
                        <textarea asp-for="Question" class="form-control" rosw="5" placeholder="Soru Giriniz"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label>Cevap</label>
                        <textarea asp-for="Answer" class="form-control" rosw="5" placeholder="Cevap Giriniz"></textarea>
                    </div>
                    <button class="btn btn-info">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

