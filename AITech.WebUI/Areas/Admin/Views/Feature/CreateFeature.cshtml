@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yeni Hizmet Oluştur</h5>
                </div>

                <form method="post">
                    <div class="form-group mb-3">
                        <label>Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="Başlık Giriniz" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" rosw="5" placeholder="Açıklama Giriniz" />
                    </div>
                    <div class="form-group mb-3">
                        <label>İkon</label>
                        <input type="text" asp-for="Icon" class="form-control" placeholder="İkon Giriniz" />
                    </div>
                    <button class="btn btn-info">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

