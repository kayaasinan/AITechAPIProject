@model List<ResultProjectDto>
@*
    Home Case Component
*@
<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Projeler</div>
            <h1 class="mb-4">Öne Çıkan Yapay Zeka Projeleri</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                    <div class="case-item position-relative overflow-hidden rounded mb-2">
                        <img class="img-fluid" src="@item.ImageUrl" alt="@item.Title">

                        <a class="case-overlay text-decoration-none" href="#">
                            <small>@item.Category.Name</small>

                            <h5 class="lh-base text-white mb-3">
                                @item.Title
                            </h5>

                            <span class="btn btn-square btn-primary">
                                <i class="fa fa-arrow-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
